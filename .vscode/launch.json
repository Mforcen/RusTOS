{
    /* 
     * Requires the Rust Language Server (RLS) and Cortex-Debug extensions
     * https://marketplace.visualstudio.com/items?itemName=rust-lang.rust
     * https://marketplace.visualstudio.com/items?itemName=marus25.cortex-debug
     */
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cortex-debug",
            "request": "attach",
            "name": "Debug (QEMU)",
            "servertype": "external",
			"windows": {
				"gdbPath": "C:\\Program Files (x86)\\GNU Arm Embedded Toolchain\\10 2021.07\\bin\\arm-none-eabi-gdb.exe",
			},
			"linux": {
				"gdbPath": "gdb-multiarch",
			},
            "cwd": "${workspaceRoot}",
			"gdbTarget": ":50000",
            "executable": "./target/thumbv7m-none-eabi/debug/rus-tos",
			"preLaunchTask": "Launch QEMU"
        },
		{
			"type": "cppdbg",
			"request": "launch",
			"name": "Debug (QEMU GDB)",
			"linux": {
				"miDebuggerPath": "gdb-multiarch",
				"miDebuggerServerAddress": "localhost:50000",
			},
			"windows": {
				"miDebuggerPath": "C:\\Program Files (x86)\\GNU Arm Embedded Toolchain\\10 2021.07\\bin\\arm-none-eabi-gdb.exe",
				"miDebuggerServerAddress": "localhost:50000",
			},
			"MIMode": "gdb",
			"targetArchitecture": "arm",
			"cwd": "${workspaceFolder}",
			"program": "./target/thumbv7m-none-eabi/debug/rus-tos",
		},
        {
            /* Configuration for the STM32F303 Discovery board */
            "type": "cortex-debug",
            "request": "launch",
            "name": "Debug (OpenOCD)",
            "servertype": "openocd",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Cargo Build (debug)",
            "executable": "./target/thumbv7m-none-eabi/debug/rus-tos",
            /* Run `cargo build --example itm` and uncomment this line to run itm example */
            // "executable": "./target/thumbv7em-none-eabihf/debug/examples/itm",
            "device": "STM32F205RET6",
            "configFiles": [
                "interface/stlink-v2.cfg",
                "target/stm32f2x.cfg"
            ],
            "svdFile": "${workspaceFolder}/stm32f205.svd",
			"linux": {
				"gdbPath": "gdb-multiarch"
			},
            "swoConfig": {
                "enabled": true,
                "cpuFrequency": 8000000,
                "swoFrequency": 2000000,
                "source": "probe",
                "decoders": [
                    { "type": "console", "label": "ITM", "port": 0 }
                ]
            }
        }
    ]
}